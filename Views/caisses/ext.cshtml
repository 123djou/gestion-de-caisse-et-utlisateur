@model IEnumerable<gestionarretecaisse.Models.mouvement>

@{
    ViewBag.Title = DateTime.Now.TimeOfDay ;
    Layout = "~/Views/Shared/View.cshtml";
}
<html>
<head>
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,700' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
    <link href="~/Content/ajoutusr.css" rel="stylesheet" />

</head>
<body style="background-color:white;">
    <fieldset style="border: medium;align-content:center;margin:auto" >
        <img src="~/Content/habitat.png" style="margin-top:0;margin-left:-10px;margin-right:0  ;
 position: absolute;
    top: 1px;
    left: 1px;
    font-size: 38px;
    right:1px;

    width:100%;
    height: 160px;

} " /><br /><br /><br /><br /><br /><br />
        <h2 class="h3">Extrait caisse : @Html.DisplayFor(model => model.FirstOrDefault().id_caisse)</h2>

        <br /><br /><br /><br />
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayName("ID")
                </th>
                <th>
                    @Html.DisplayName("Date")
                </th>
                <th>
                    @Html.DisplayName("Sens")
                </th>
                <th>
                    @Html.DisplayName("Operation")
                </th>
                <th>
                    @Html.DisplayName("Montant")
                </th>

                <th>
                    @Html.DisplayName("ID cpt")
                </th>

            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.id_caisse)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.date_mouv)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.sens_mouv)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.operation)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.montant)<p style="display:inline;color:forestgreen">&nbsp;DT</p>
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.id_compte)
                    </td>

                </tr>
            }

        </table>
    </fieldset>
    <a href="javascript:window.print()" style="color:#2a74bb">imprimer</a>
    <a href="javascript:window.history.back()" style="color:#2a74bb">retour</a>
        </body></html>