@model gestionarretecaisse.Models.mouvement

@{
    ViewBag.Title = "extrait";
    Layout = "~/Views/Shared/Layoutop.cshtml";
}
<html>
<head>
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,700' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
    <link href="~/Content/ajoutusr.css" rel="stylesheet" />

</head>
<body>
    <div class="wrapper">
     
        <h3 class="h3">Editer extrait</h3>
        <br />
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })



              
                <div class="form-group">
               <b class = "control-label col-md-2">Num&nbsp;caisse&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;:</b>
                    <div class="col-md-10">
                        @Html.DropDownList("id_caisse", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.id_caisse, "", new { @class = "text-danger" })
                    </div>
                </div>
        
                <br />
                <div class="form-group">
                    <b class="control-label col-md-2">de&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;: </b>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.date_mouv, new { htmlAttributes = new { @class = "form-control",@type="date" } })
                        @Html.ValidationMessageFor(model => model.date_mouv, "", new { @class = "text-danger" })
                    </div>
                </div>

                <br />

                <div class="form-group">
                    <b class = "control-label col-md-2">jusqu'a&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;: </b>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.operation, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                        @Html.ValidationMessageFor(model => model.operation, "", new { @class = "text-danger" })
                    </div>
                </div>
                <br /><br />
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="afficher" class="bout" />
                    </div>
                </div>
            </div>
        }

    
    </div>
</body></html>